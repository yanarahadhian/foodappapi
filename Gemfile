source 'https://rubygems.org'


# Set ruby version
# ruby '2.2.2'

# Bundle edge Rails instead: gem 'rails', github: 'rails/rails'
gem 'rails', '4.2.3'

# Use mysql as the database for Active Record
gem 'mysql2'

# Use SCSS for stylesheets
gem 'sass-rails', '~> 5.0'

# Use Uglifier as compressor for JavaScript assets
gem 'uglifier', '>= 1.3.0'

# Use CoffeeScript for .coffee assets and views
gem 'coffee-rails', '~> 4.1.0'

# See https://github.com/rails/execjs#readme for more supported runtimes
# gem 'therubyracer', platforms: :ruby

# Use jquery as the JavaScript library
gem 'jquery-rails'

# Turbolinks makes following links in your web application faster. Read more: https://github.com/rails/turbolinks
gem 'turbolinks'

# Build JSON APIs with ease. Read more: https://github.com/rails/jbuilder
gem 'jbuilder', '~> 2.0'

# bundle exec rake doc:rails generates the API under doc/api.
gem 'sdoc', '~> 0.4.0', group: :doc

# Use ActiveModel has_secure_password
gem 'bcrypt', '~> 3.1.7'

# A very fast & simple Ruby web server http://code.macournoyer.com/thin/
gem 'thin'

# Use Capistrano for deployment
gem 'capistrano', '~> 3.4.0'
gem 'capistrano-rails'
gem 'capistrano-ext'
gem 'capistrano-bundler'
gem 'capistrano-rvm'

# An opinionated micro-framework for creating REST-like APIs in Ruby
gem 'grape'

# Add swagger compliant documentation to your grape API
gem 'grape-swagger'

# Integration swagger to grape in rails http://brandymint.ru
gem 'grape-swagger-rails'

# Hashie compatibility layer for forbidden attributes protection
gem 'hashie-forbidden_attributes'

# kramdown is a fast, pure Ruby Markdown superset converter, using a strict syntax definition and supporting several common extensions.
gem 'kramdown'

# Pure Ruby implementation of an SSH (protocol 2) client http://net-ssh.github.com/net-ssh
gem 'net-ssh', '2.9.2'

# Simple HTTP and REST client for Ruby, inspired by microframework syntax for specifying actions.
gem 'rest-client'

# Classier solution for file uploads for Rails, Sinatra and other Ruby web frameworks
gem 'carrierwave', github:'carrierwaveuploader/carrierwave'

# All sorts of useful information about every country packaged as convenient little country objects.
gem 'countries'

# Simple ruby gem to create form lists with cities and states
gem 'city-state'

group :development, :test do
  # Call 'byebug' anywhere in the code to stop execution and get a debugger console
  gem 'byebug'

  # rails Console on the Browser
  gem 'web-console', '~> 2.0'

  # rails application preloader
  gem 'spring'

  # this is a small gem which causes rails console to open pry
  gem 'pry-rails'

  # replaces the standard Rails error page with a much better and more useful error page
  gem 'better_errors'

  # retrieve the binding of a method's caller
  gem 'binding_of_caller'

  # an IRB alternative and runtime developer console
  gem 'pry'

  # mutes assets pipeline log messages
  gem 'quiet_assets'

  # a code metric tool to check the quality of rails code
  gem 'rails_best_practices'

  # increase application performance by reducing the number of queries it makes
  gem 'bullet'

  # WIRB syntax highlights Ruby objects
  gem 'wirb'

  # mini view framework for console applications and uses it to improve ripl(irb)'s default inspect output
  gem 'hirb'

  # a Ruby library that pretty prints Ruby objects in full color exposing their internal structure with proper indentation
  gem 'awesome_print'

  # scan application models and displays a list of columns that probably should be indexed
  gem 'lol_dba'

  # Add a comment summarizing the current schema to the top or bottom
  gem 'annotate', :git => 'https://github.com/ctran/annotate_models.git'
end

